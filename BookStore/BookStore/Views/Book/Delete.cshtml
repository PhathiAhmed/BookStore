@model BookStore.Models.Book

@{
    ViewData["Title"] = "Delete";
    Layout = "/Views/_Layout.cshtml";
}

<h2>Delete</h2>

<h3 style="color:firebrick">Are you sure you want to delete this?</h3>
<div>
    <h4>Book</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt class="text-muted">
            student's Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt class="text-primary">
            student's Age
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt class="text-info">
            student's Birth Date
        </dt>

        <dd>
            @Html.DisplayFor(model => model.author)
        </dd>

        <dt class="text-warning">
            student's Gender
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ImageUrl)
        </dd>

       

        <dd>
            <img src="~/Uploads/@(Model.ImageUrl)" class="img-thumbnail " style="height :70px; width:100px" />
        </dd>

    </dl>

    <form asp-action="Delete">
        <button type="submit" value="Delete" class="btn btn-danger mx-2">
            <i class="icofont-ui-delete"></i>
            Delete
        </button>
        <a asp-action="Index" class="btn btn-outline-success">
            <i class="icofont-ui-close"></i>
            Cancel
        </a>
    </form>
</div>
